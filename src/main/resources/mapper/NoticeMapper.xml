<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.project.notice.NoticeMapper">

    <!-- tb_notice 테이블 전체 컬럼 -->
    <sql id="postColumns">
        id
        , title
        , content
        , writer
        , created_date
    </sql>


    <!-- 공지사항 저장 -->
    <insert id="save" parameterType="com.project.project.notice.NoticeDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_notice (
        <include refid="postColumns" />
        ) VALUES (
        #{id}
        , #{title}
        , #{content}
        , #{writer}
        , NOW()
        )
    </insert>


    <!-- 공지사항 상세정보 조회 -->
    <select id="findById" parameterType="long" resultType="com.project.project.notice.NoticeDto">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_notice
        WHERE
        id = #{value}
    </select>


    <!-- 공지사항 수정 -->
    <update id="update" parameterType="com.project.project.notice.NoticeDto" useGeneratedKeys="true" keyProperty="id">
        UPDATE tb_notice
        SET
            created_date = NOW()
          , title = #{title}
          , content = #{content}
          , writer = #{writer}
        WHERE
            id = #{id}
    </update>


    <!-- 공지사항 삭제 -->
    <delete id="deleteById" parameterType="long">
        Delete from tb_notice where id = CAST(#{id} as INTEGER)

    </delete>


    <!-- 공지사항 리스트 조회 -->
    <select id="findAll" resultType="com.project.project.notice.NoticeDto">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_notice
        ORDER BY
        id DESC
    </select>

</mapper>